@using RabbitSignalRClient.Models
@model List<Stock>
    <div class="container">
    <div class="jumbotron">
        <h3>Elija su inversión!</h3>
    </div>
    @using(Html.BeginForm("Detail","Home","FormMethod.Post"))
    {
        @foreach(var stoc in Model)
        {
            <div class="radio">
                <label for="female" style="width : 125px">
                    <input type="radio" name="ID" id="ID" value="@stoc.ID">@stoc.Name                                        
                </label>
                <b>Inversión</b> : <label>@stoc.Value $</label>
            </div>            
        }
        <br>
        <input type="submit" value="Subscribir" class="btn btn-success">
    }</div>